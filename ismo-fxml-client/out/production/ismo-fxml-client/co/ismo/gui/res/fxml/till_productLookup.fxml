<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0" fx:controller="co.ismo.gui.controller.ProductLookupController"
          xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <columnConstraints>
        <ColumnConstraints percentWidth="25.0"/>
        <ColumnConstraints percentWidth="75.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="100.0"/>
    </rowConstraints>
    <children>
        <VBox style="-fx-background-color: EEEEEE;">
            <children>
                <VBox>
                    <children>
                        <Label text="SKU">
                            <VBox.margin>
                                <Insets bottom="5.0"/>
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="skuField" styleClass="lookupField" style="-fx-padding: 10;"/>
                    </children>
                    <VBox.margin>
                        <Insets bottom="15.0"/>
                    </VBox.margin>
                </VBox>
                <VBox>
                    <children>
                        <Label text="Barcode">
                            <VBox.margin>
                                <Insets bottom="5.0"/>
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="barcodeField" styleClass="lookupField" style="-fx-padding: 10;"/>
                    </children>
                    <VBox.margin>
                        <Insets bottom="15.0"/>
                    </VBox.margin>
                </VBox>
                <VBox>
                    <children>
                        <Label text="Product Name">
                            <VBox.margin>
                                <Insets bottom="5.0"/>
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                        <TextField fx:id="nameField" styleClass="lookupField" style="-fx-padding: 10;"/>
                    </children>
                    <padding>
                        <Insets bottom="15.0"/>
                    </padding>
                </VBox>
                <VBox>
                    <children>
                        <Label text="Super Category">
                            <VBox.margin>
                                <Insets bottom="5.0"/>
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                        <ComboBox fx:id="supercatField" maxWidth="1.7976931348623157E308" promptText="All Categories" styleClass="lookupField"
                                  style="-fx-padding: 5;"/>
                    </children>
                    <VBox.margin>
                        <Insets bottom="15.0"/>
                    </VBox.margin>
                </VBox>
                <VBox>
                    <children>
                        <Label text="Sub Category">
                            <VBox.margin>
                                <Insets bottom="5.0"/>
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                        <ComboBox fx:id="catField" maxWidth="1.7976931348623157E308" promptText="All Categories" styleClass="lookupField"
                                  style="-fx-padding: 5;"/>
                    </children>
                    <VBox.margin>
                        <Insets bottom="15.0"/>
                    </VBox.margin>
                </VBox>
                <VBox>
                    <children>
                        <Label text="Age Rating">
                            <VBox.margin>
                                <Insets bottom="5.0"/>
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                        <ComboBox fx:id="ageRatingField" maxWidth="1.7976931348623157E308" promptText="All Age Ratings"
                                  styleClass="lookupField" style="-fx-padding: 5;"/>
                    </children>
                    <VBox.margin>
                        <Insets bottom="15.0"/>
                    </VBox.margin>
                </VBox>
                <VBox>
                    <children>
                        <Label text="Price">
                            <VBox.margin>
                                <Insets bottom="5.0"/>
                            </VBox.margin>
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                        <HBox>
                            <children>
                                <TextField fx:id="priceFromField" promptText="From" styleClass="lookupField" style="-fx-padding: 10;"/>
                                <Pane HBox.hgrow="ALWAYS"/>
                                <TextField fx:id="priceToField" promptText="To" styleClass="lookupField" style="-fx-padding: 10;"/>
                            </children>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="15.0"/>
                    </VBox.margin>
                </VBox>
                <Pane VBox.vgrow="ALWAYS"/>
                <VBox>
                    <children>
                        <Button maxWidth="1.7976931348623157E308" text="Search Products (Enter)" styleClass="searchBtn" onAction="#searchProducts" focusTraversable="false">
                            <VBox.margin>
                                <Insets bottom="15.0"/>
                            </VBox.margin>
                        </Button>
                        <Button maxWidth="1.7976931348623157E308" text="Reset to Defaults (F12)" styleClass="searchBtn" focusTraversable="false"/>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
            </padding>
        </VBox>
        <TableView fx:id="resultsTable" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" focusTraversable="false" editable="false">
            <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            <columns>
                <TableColumn fx:id="skuColumn" text="SKU"/>
                <TableColumn fx:id="barcodeColumn" text="Barcode"/>
                <TableColumn fx:id="nameColumn" text="Name"/>
                <TableColumn fx:id="stockColumn" text="Stock"/>
                <TableColumn fx:id="priceColumn" text="Price"/>
                <TableColumn fx:id="supercatColumn" text="Supercat"/>
                <TableColumn fx:id="subcatColumn" text="Subcat"/>
                <TableColumn fx:id="ageRatingColumn" text="Age Rating"/>
            </columns>
        </TableView>
    </children>
</GridPane>
